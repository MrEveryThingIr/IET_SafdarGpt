{
  "name": "Modal",
  "description": "Basic modal component with optional escape key close, backdrop, and animation.",
  "functions": [
    {
      "key": "modal",
      "args": {
        "openSelector": ".open-modal",
        "closeSelector": ".close-modal",
        "modalSelector": "#modalElement",
        "backdrop": true,
        "closeOnEscape": true,
        "animation": {
          "type": "fade",
          "duration": 300
        },
        "lifecycle": {
          "beforeOpen": null,
          "afterOpen": null,
          "afterClose": null
        }
      }
    }
  ]
}
