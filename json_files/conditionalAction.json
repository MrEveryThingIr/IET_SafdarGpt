{
  "functions": [
    {
      "key": "conditionalAction",
      "args": {
        "rules": [
          {
            "watchSelector": "select[name='input[type][]']",
            "eventType": "change",
            "conditions": [
              { "operator": "equals", "value": "radio" }
            ],
            "actions": [
              { "type": "show", "targetSelector": ".input-option-group" }
            ],
            "fallbackActions": [
              { "type": "hide", "targetSelector": ".input-option-group" }
            ]
          },
          {
            "watchSelector": "select[name='input[type][]']",
            "eventType": "change",
            "conditions": [
              { "operator": "equals", "value": "checkbox" }
            ],
            "actions": [
              { "type": "show", "targetSelector": ".input-option-group" }
            ],
            "fallbackActions": [
              { "type": "hide", "targetSelector": ".input-option-group" }
            ]
          }
        ]
      }
    }
  ]
}
